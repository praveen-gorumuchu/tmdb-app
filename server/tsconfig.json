{
  "compilerOptions": {
    "module": "NodeNext", 
    "moduleResolution": "NodeNext",    // must match NodeNext
    "types": [],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames":true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {},
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}
